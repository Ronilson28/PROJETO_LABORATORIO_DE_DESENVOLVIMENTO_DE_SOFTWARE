<main class="pagina-inicial">
  <section class="destaque">
    <h1>Destaque</h1>
    <% if (destaque) { %>
      <div class="destaque-banner">
        <img src="<%= destaque.capa_url %>" alt="<%= destaque.titulo %>">
        <div class="info">
          <h2><%= destaque.titulo %></h2>
          <p>Autor: <%= destaque.id_autor.nome %></p>
        </div>
      </div>
    <% } else { %>
      <p>Não há histórias em destaque no momento.</p>
    <% } %>
  </section>

  <% categorias.forEach(function(categoria) { %>
    <section class="categoria">
      <h2><%= categoria.nome %></h2>
      <div class="carrossel">
        <% categoria.historias.forEach(function(historia) { %>
          <div class="card-historia">
            <img src="<%= historia.capa_url %>" alt="<%= historia.titulo %>">
            <h3><%= historia.titulo %></h3>
            <p><%= historia.autor.usuario %></p>
            <p><%= new Date(historia.data_criacao).toLocaleDateString() %></p>
            <p>Status: <%= historia.status %></p>
          </div>
        <% }) %>
      </div>
    </section>
  <% }) %>
</main>
